<?xml version="1.0"?>
<launch>

  <!-- Namespace arguments -->
  <arg name="ns_guidance"   default="guidance"/>
  <arg name="ns_controller" default="controller"/>
  <arg name="ns_thrust"     default="thrust"/>

  <!-- Guidance nodes -->
 <group if="$(eval type == 'simulator')">
  <group ns="$(arg ns_guidance)">
    <node pkg="los_guidance"       type="los_guidance_backstepping.py" name="los"       output="screen" respawn="true" respawn_delay="2"/>
    <node pkg="dp_guidance"        type="dp_guidance.py"               name="dp"        output="screen" respawn="true" respawn_delay="2"/>
    <node pkg="joystick_guidance"  type="joystick_guidance.py"         name="joystick"  output="screen" respawn="true" respawn_delay="2"/>
    <node pkg="interface"          type="guidance_interface.py"        name="interface" output="screen" respawn="true" respawn_delay="2"/>
  </group>
 
  <!-- Controller nodes -->
  <group ns="$(arg ns_controller)">
    <node pkg="los_controller"      type="los_controller_node.py"     name="los_controller"   output="screen" respawn="true" respawn_delay="2"/>
    <node pkg="dp_controller"       type="dp_controller_node"         name="dp"               output="screen" respawn="true" respawn_delay="2"/>
  </group>

  <!-- Thrust nodes -->
  <group ns="$(arg ns_thrust)">
    <node pkg="thruster_allocator"  type="thruster_allocator_node"      name="thruster_allocator" respawn="true" respawn_delay="2"/>
  </group>
</group>

</launch>
